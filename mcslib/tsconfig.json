{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./build/tsc-cache.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./build"
  ]
}
{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node16",
    "rootDir": "./",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/tsc-cache.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
    	"@/*": ["src/*"],
    }
  },
  "include": [
    "./"
  ],
}